{
  "compilerOptions": {
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "rootDir": "src",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "target": "es2022",
    "lib": ["es2022", "dom"], 
    "skipLibCheck": true,
    "module": "commonjs", 
  },
  "compileOnSave": true,
  "include": [
    "src"
  ]
}
